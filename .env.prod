# =================================
# CONFIGURACIÓN DE PRODUCCIÓN
# =================================

# Django Configuration
DEBUG=False
SECRET_KEY=change-this-super-secret-key-in-production-very-long-and-random
ALLOWED_HOSTS=your-domain.com,api.your-domain.com,localhost

# Database Configuration
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# MongoDB Configuration
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB_NAME=arryn_products_production
MONGO_ROOT_USERNAME=arryn_admin
MONGO_ROOT_PASSWORD=super_secure_mongo_password_change_this
MONGO_CONNECTION_TIMEOUT=10000

# Redis Configuration
REDIS_PASSWORD=super_secure_redis_password_change_this

# Cache Configuration  
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://redis:6379/1
CACHE_TIMEOUT=600
CACHE_MAX_ENTRIES=10000

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://www.your-frontend.com

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE=/app/logs/django.log

# Performance Settings
RESPONSE_CACHE_TIMEOUT=600
REQUEST_LOG_SLOW_THRESHOLD=2.0

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=gevent
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=60

# Django Admin Super User
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
DJANGO_SUPERUSER_PASSWORD=change_this_admin_password

# API Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
API_VERSION=v1