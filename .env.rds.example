# =================================
# AWS RDS POSTGRESQL CONFIGURATION
# =================================
# Copia este archivo como .env.prod y completa los valores

# Django Configuration
DEBUG=False
SECRET_KEY=GENERA_UNO_NUEVO_CON: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
ALLOWED_HOSTS=tu-dominio.com,*.compute.amazonaws.com,tu-ip-elastica

# AWS RDS PostgreSQL Configuration
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=arryn_db
DATABASE_USER=arryn_admin
DATABASE_PASSWORD=TU_PASSWORD_SEGURO_AQUI
DATABASE_HOST=arryn-backend-db.xxxxxxxxx.us-east-1.rds.amazonaws.com
DATABASE_PORT=5432

# MongoDB Configuration (opcional si usas MongoDB Atlas)
MONGO_HOST=
MONGO_PORT=
MONGO_DB_NAME=arryn_products_db
MONGO_CONNECTION_TIMEOUT=10000
MONGODB_URL=mongodb+srv://usuario:password@cluster.mongodb.net/arryn_products_db

# Cache Configuration  
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=arryn-cache
CACHE_TIMEOUT=300
CACHE_MAX_ENTRIES=1000

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://tu-frontend.com,https://www.tu-frontend.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/arryn/django.log

# Performance Settings
RESPONSE_CACHE_TIMEOUT=300
REQUEST_LOG_SLOW_THRESHOLD=1.0

# API Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
API_VERSION=v1

# Django Superuser (para creación automática)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@arryn.com
DJANGO_SUPERUSER_PASSWORD=CAMBIAR_ESTE_PASSWORD
